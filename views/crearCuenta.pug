doctype html
html(lang="es")
  head
    include partials/header
  body.login 
    .contenedor-formulario 
      h1 Crea tu cuenta en UpTask 

      if locals.mensajes 
        .alertas
          each categoria in Object.keys(locals.mensajes)
            each error in mensajes[categoria]
              if error == 'usuarios.usuarios_email_unique must be unique'
                .alerta(class=`${categoria}`)
                  p  Usuario Ya Registrado
              else
                .alerta(class=`${categoria}`)
                  p= error
        //- each error in errores
        //-   if error.type == 'unique violation'
        //-     p.error.alerta Usuario Ya Registrado
        //-   else    
        //-     p.error.alerta= error.message

      form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
        .campo 
          label(for="email") E-mail 
          input(type='email' name="email" placeholder="Tu Email" value= email)
          //¬required

        .campo 
          label(for="password") Password
          input(type='password' name="password" placeholder="Tu Password" value= password)
        .campo.enviar
          input.boton(type="submit", value="Crear cuenta")
        .campo 
          a(href="/iniciar-sesion") Volver a Iniciar Sesión 

